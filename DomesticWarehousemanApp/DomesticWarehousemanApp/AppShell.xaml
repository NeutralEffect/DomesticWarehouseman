<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:DomesticWarehousemanApp.Views" 
	   xmlns:domesticwarehousemanapp="clr-namespace:DomesticWarehousemanApp" 
	   x:DataType="domesticwarehousemanapp:AppShell"
	   x:Class="DomesticWarehousemanApp.AppShell">

	<TabBar>

		<ShellContent Title="Storage"
					  Icon="dw_logo.png"
					  ContentTemplate="{DataTemplate views:Storage}">
		</ShellContent>

		<ShellContent Title="Lists"
					  Icon="icon_lists.png"
					  ContentTemplate="{DataTemplate views:StorageLists}">
		</ShellContent>

		<ShellContent Title="Members"
					  Icon="icon_member.png"
					  ContentTemplate="{DataTemplate views:StorageMembers}">
		</ShellContent>
		
	</TabBar>
	
</Shell>
