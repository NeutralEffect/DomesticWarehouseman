<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="DomesticWarehousemanApp.Views.NotesPage"
             Title="Notes" 
			 BackgroundColor="#3E3E3E">

	<Grid>

		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="2*"/>
			<RowDefinition Height=".5*"/>
			<RowDefinition Height="2*"/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<Image Source="" 
			   BackgroundColor="#363333"
			   Grid.Column="0" 
			   Grid.Row="0" 
			   Grid.ColumnSpan="2" />

		<Entry x:Name="entryNote"
			   Grid.Column="0"
			   Grid.Row="1"
			   Grid.ColumnSpan="2"
			   Placeholder="Enter note here"
			   TextColor="White"
			   PlaceholderColor="White" />

		<Button x:Name="buttonSave"
				Grid.Row="2"
				Grid.Column="0"
				Text="Save"
				Clicked="buttonSave_Clicked"
				/>

		<Button x:Name="buttonErase"
				Grid.Row="2"
				Grid.Column="1"
				Text="Erase"
				Clicked="buttonErase_Clicked" />

		<Button x:Name="buttonTest"
				Grid.Row="3"
				Grid.Column="0"
				Grid.ColumnSpan="2"
				Text="Test"
				FontSize="Title"
				TextColor="White"
				Clicked="buttonTest_Clicked" />

	</Grid>

</ContentPage>
